// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  id        Int       @id @default(autoincrement())
  name      String
  description String
  stock     Int       
  quantity  Int
  price Int      
  category  Category
  status    Status
}

enum Category {
  CLOTHING
  SHOES
  ACCESSORIES
  HOME
  BEAUTY
}

enum Status {
  ACTIVE
  INACTIVE
}